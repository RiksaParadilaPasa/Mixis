<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    android:id="@+id/cardpromo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/IV_promo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/mobil"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/TV_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/IV_promo"/>

        <TextView
            android:id="@+id/TV_deskripsiPromo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="deskripsi"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:minLines="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TV_promo"/>

        <TextView
            android:id="@+id/TV_tanggalPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/TV_pointPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="point"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/TV_promo"
            app:layout_constraintRight_toLeftOf="@id/TV_tanggalPromo"
            app:layout_constraintTop_toBottomOf="@id/IV_promo"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>